$(document).ready(function () {
    var profe = $('#profe');
    var sel = $('#sel');
    var formLink = $('#link');
    formLink.hide();
    $('#b').click(function () {
        $.ajax({
            type: 'GET',
            url: "api/predmet",
            dataType: "json",
            success: function (data) {
                formLink.show();
                $.each(data, function (index, val) {
                    sel.append('<option value ="' + val.id + '">' + val.Naziv_predmeta + '</option>')
                });
            }
        });
    });
    $("#submitData").click(function () {
        var id = $('#sel').val();
        prompt(id);
    
    });
