$(document).ready(function () {
    var profe = $('#profe');
    var sel = $('#sel');
    var formLink = $('#link');
    formLink.hide();
   /* */
    $('#b').click(function () {
        $.ajax({
            type: 'GET',
            url: "api/predmet",
            dataType: "json",
            success: function (data) {
                formLink.show();
                $.each(data, function (index, val) {
                    sel.append('<option value ="' + val.id + '">' + val.Naziv_predmeta + '</option>')
                });
            }
        });
    });
    $("#submitData").click(function () {
        var id = $('#sel').val();
        $.ajax({
            type: 'GET',
            url: "api/predmet/" + id,
            dataType: "json",
            success: function (data) {
                profe.empty();
                profe.append('<li>' + data.Naziv_predmeta + '</li>' + '<li>' + data.Godina + '</li>' + '<li>' + data.Sifru_predmeta + '</li>' + '<li>' + data.Kratak_opis + '</li>' + '<li>' + data.Labaratoriske_vezbe + '</li>' + '<input id="deleteId" onclick="obrisiPredmet('+data.id+')"  type="button" class="predmetBrisanje" value="obrisi" /><input id="editId"   type="button" class="predmetEdit" value="izmeni" />')        
            }
        });
        function obrisiPredmet(id) {
            $.ajax({
                type = 'delete',
                url = "api/predmet/" + id,
                dataType: "json",
                success: function (data) {
                    alert('obrisan predmet');
                }
            });
        } 
     /*    $('#deleteId').click(function () {
            var id = $('#deleteId').data.id;
            prompt('id');
